# vim: ft=gitconfig
[alias]
    graph = "log --graph --abbrev-commit --pretty=oneline --decorate"
    unstage = "reset HEAD --"
    root = "rev-parse --show-toplevel"
    peek = "log -p --max-count=1"
[init]
    templatedir = ~/.git_template
[rebase]
    autosquash = true
[push]
    default = upstream
