# vim: ft=gitconfig
[alias]
    graph = "log --graph --abbrev-commit --pretty=oneline --decorate"
    root = "rev-parse --show-toplevel"
    peek = "log -p --max-count=1"
    s = "status -s"
    d = "diff"
    t = "diff --cached"
    co = "commit"
    pff = "pull --ff-only"
    pr = "pull --rebase"
[init]
    templatedir = ~/.git_template
[rebase]
    autosquash = true
[push]
    default = upstream
